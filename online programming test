#include <stdio.h>
int main() {
   int rows, i, j,k,count, number = 1;
   printf("Enter the number of rows: ");
   scanf("%d", &rows);
   count=rows;
   for (i = 1; i <= rows; i++) {
      for(k=count;k>=1;k--)
      {
          printf("  ");
      }
      for (j = 1; j <= i; ++j) {
         printf("%d ", number);
         ++number;
      }
      printf("\n");
      count--;
   }
   return 0;
}
